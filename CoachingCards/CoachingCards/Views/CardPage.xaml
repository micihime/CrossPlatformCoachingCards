<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoachingCards.Views.CardPage"
             xmlns:vm="clr-namespace:CoachingCards.ViewModels"
             Title="Koučovací karty">

    <ContentPage.BindingContext>
        <vm:CardViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
            <Label Text="{Binding Title}" FontSize="Title"/>
            <Label Text="{Binding Text}" FontSize="16" Padding="0,0,0,0"/>
            <Label Text="{Binding Action}" FontSize="16" FontAttributes="Italic" Padding="0,0,0,0"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
